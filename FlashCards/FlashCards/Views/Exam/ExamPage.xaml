<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCards.Views.Exam.ExamPage">
    <ContentPage.Content>
        <StackLayout x:Name="PageContent">
            <Label Text="{Binding Score}"/>
            <Label Text="{Binding Information}"/>
            <Label Text="Answer:"/>
            <Entry Text="{Binding UserAnswer}"/>
            <Button Text="Check" Command="{Binding SubmitAnswerCommand}"/>
            <Image/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>