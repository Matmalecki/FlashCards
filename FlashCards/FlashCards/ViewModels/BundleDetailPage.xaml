<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCards.ViewModels.BundleDetailPage"
             xmlns:val="clr-namespace:FlashCards.Validation">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name" />
            <Entry Text="{Binding Name}" x:Name="EntryName"/>
            <Button Text="Save" Clicked="SaveButtonHandler"/>
            <Label Text="" x:Name="ResultField"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>