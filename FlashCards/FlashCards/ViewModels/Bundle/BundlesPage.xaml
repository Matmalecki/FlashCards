<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCards.ViewModels.BundlesPage">

    <ListView x:Name="BundlesView"
            ItemsSource="{Binding Items}"
            ItemTapped="Handle_ItemTapped"
            CachingStrategy="RecycleElement">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout>
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding CardType}" />
                        <Button Text="x" BackgroundColor="OrangeRed"
                                Clicked="DeleteBundleHandler" CommandParameter="{Binding Id}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>


        <ListView.Footer>
            <Button Text="+" Clicked="AddBundleHandler"/>
        </ListView.Footer>

    </ListView>
</ContentPage>
