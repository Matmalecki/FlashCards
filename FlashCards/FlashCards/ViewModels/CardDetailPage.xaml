<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCards.ViewModels.CardDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Information" />
            <Entry Text="{Binding Information}" x:Name="EntryInformation"/>
            <Label Text="Answer" />
            <Entry Text="{Binding Answer}" x:Name="EntryAnswer"/>
            <Button Text="Save" Clicked="SaveButtonHandler"/>
            <Label Text="" x:Name="ResultField"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>