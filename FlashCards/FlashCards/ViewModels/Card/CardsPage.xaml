<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCards.ViewModels.CardsPage"
             Title="{Binding Name}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit bundle's info" Clicked="EditBundleHandler" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="CardsView"
            ItemsSource="{Binding Items}"
            ItemTapped="SelectedCardHandler"
            CachingStrategy="RecycleElement">



        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout>
                        <Label Text="{Binding Information}" />
                        <Label Text="{Binding Answer}" />
                        <Button Text="Delete" BackgroundColor="OrangeRed" Clicked="DeleteCardHandler" CommandParameter="{Binding Id}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>

        <ListView.Footer>
            <Button Text="+" Clicked="CreateCardHandler"/>
        </ListView.Footer>
    </ListView>
</ContentPage>
